<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp"
        android:padding="25dp"
        tools:context=".EditActivity">

    <TextView
            android:text="Edit transaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#b388ff"
            android:textSize="26dp"
            android:padding="15dp"
            android:id="@+id/textView"
            android:fontFamily="monospace" />

    <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_baseline_article_24"
            android:hint="Transaction details"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapWords"
                android:fontFamily="@font/montserrat" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            app:startIconDrawable="@drawable/ic_baseline_monetization_on_24"
            app:endIconDrawable="@drawable/ic_baseline_calendar_today_24"
            android:hint="Amount"
            app:helperText="in Rs."
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"

                android:fontFamily="@font/montserrat" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:startIconDrawable="@drawable/ic_baseline_calendar_today_24"
            app:helperText="YYYY-MM-DD"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:counterEnabled="true"
            app:counterMaxLength="10"
            android:hint="Date"
            android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/date"
                android:inputType="date"
                android:maxLength="10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="#b39ddb"
            android:text="Transaction type"
            android:fontFamily="@font/montserrat"
            android:textSize="20dp" />

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="vibrate"
                android:padding="20dp"
                android:id="@+id/credit"
                android:text="Credit"
                android:fontFamily="@font/montserrat" />

        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="vibrate"
                android:padding="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/debit"
                android:text="Debit"
                android:fontFamily="@font/montserrat" />
    </RadioGroup>

</LinearLayout>